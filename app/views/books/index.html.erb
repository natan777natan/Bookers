<h1>Books</h1>
<div class="main-visual">
<table class="table">
	<tr>
		<th class="table-title">Title</th>
		<th class="table-body">Body</th>
		<th class="table-show"></th>
		<th class="table-edit"></th>
		<th class="able-destroy"></th>
	</tr>
	
	<% @books.each do |book| %>
	<tr>
		<td class="table-title"><%= book.title %></td>
		<td class="table-body"><%= book.body %></td>
		<td class="table-show"><%=link_to "Show", book_path(book.id) %></td>
		<td class="table-edit"><%= link_to "Edit", edit_book_path(book.id) %></td>
		<td class="table-destroy"><%= link_to "Destroy", book_path(book), method: :delete %></td>
	</tr>
	<% end %>
</table>
</div>

<h2>New book</h2>
<%= form_for(@book) do |f| %>

    <div class="toukou">
    <h4 class="toukou-title">Title</h4>
    <div class="toukou-waku"><%= f.text_field :title %></div>


    <h4 class="toukou-title">Body</h4>
    <div class="toukou-waku"><%= f.text_area :body %></div>

    <%= f.submit 'create book' %>
    </div>



    <% if @book.errors.any? %>
    <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    </div>
    <% end %>

<% end %>

